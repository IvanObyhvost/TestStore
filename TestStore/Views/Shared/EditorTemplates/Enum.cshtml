@model Enum
@Html.DropDownList(
"name",
Enum.GetValues(Model.GetType())
.Cast<Enum>()
.Select(m =>
{
    string enumVal = Enum.GetName(Model.GetType(), m);
    return new SelectListItem()
    {
        Selected = (Model.ToString() == enumVal),
        Text = enumVal,
        Value = enumVal
    };
}))
